<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>UMS | HOME</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"
          rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/app.js"></script>
</head>
<body ng-app="ums" ng-controller="MainCtrl">

<nav class="navbar navbar-default pull-right" ng-controller="NavigationCtrl">
    <ul class="nav navbar-nav">
        <li ng-show="isLoggedIn()">
            <a>{{ currentUser() }}</a>
        </li>
        <li ng-show="isLoggedIn()">
            <a href="" ng-click="logOut()">Log Out</a>
        </li>
        <li ng-hide="isLoggedIn()">
            <a href="/#/login">Log In</a>
        </li>
        <li ng-hide="isLoggedIn()">
            <a href="/#/register">Register</a>
        </li>
    </ul>
</nav>

<div class="col-md-6 col-md-offset-3">
    <ui-view></ui-view>

    <!-- home view -->
    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
            <h1>UMS</h1>
        </div>

        <h2>Welcome to UMS - a small assignment</h2>

        <hr>

        <h3>Registered users</h3>

        <ul ng-repeat="user in users">
            <li>
                <!-- email is a link to profile -->
                <h4>
                    <a href="/users/{{ user._id; }}">
                        {{ user.email; }}
                    </a>
                </h4>
                <!-- user overview -->
                {{ user.firstName; }} {{ user.lastName; }}
                Role: {{ user.role; }}
            </li>
        </ul>
    </script>

    <!-- registration view -->
    <script type="text/ng-template" id="/register.html">
        <h3>Make an account</h3>

        <div ng-show="error" class="alert alert-danger-row">
            <span>{{ error.errors.toString(); }}</span>
        </div>

        <form ng-submit="register()"
              style="matgin-top: 30px;">

            <div class="form-group">
                <input type="text"
                       class="form-control"
                       placeholder="Email *"
                       ng-model="user.email">
            </div>

            <div class="form-group">
                <input type="password"
                       class="form-control"
                       placeholder="Password *"
                       ng-model="user.password">
            </div>
            <div class="form-group">
                <input type="text"
                       class="form-control"
                       placeholder="First name *"
                       ng-model="user.firstName">
            </div>
            <div class="form-group">
                <input type="text"
                       class="form-control"
                       placeholder="Last name *"
                       ng-model="user.lastName">
            </div>
            <div class="form-group">
                <label for="role">
                    Role:
                </label>
                <select class="form-control"
                        id="role"
                        name="role"
                        ng-model="user.role">
                    <option value="user">User</option>
                    <option value="admin">Admin</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary pull-right">
                Register
            </button>
        </form>
    </script>

    <script type="text/ng-template" id="/login.html">
        <h3>Log in to your account</h3>

        <div ng-show="error" class="alert alert-danger-row">
            <span>{{ error.errors.toString(); }}</span>
        </div>

        <form ng-submit="login()"
              style="matgin-top: 30px;">

            <div class="form-group">
                <input type="text"
                       class="form-control"
                       placeholder="Email *"
                       ng-model="user.email">
            </div>

            <div class="form-group">
                <input type="password"
                       class="form-control"
                       placeholder="Password *"
                       ng-model="user.password">
            </div>
            <button type="submit" class="btn btn-primary pull-right">
                Log In
            </button>
        </form>
    </script>
</div>

</body>
</html>
